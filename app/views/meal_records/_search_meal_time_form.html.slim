/ https://github.com/jonatandahora/semantic-datepicker-rails
.ui.container
  // TODO: 週間フォームも表示できるようになったら、コメントアウト外す
  / .ui.center.aligned.basic.segment
    .ui.calendar id="chalendar-1"
      .ui.input.left.icon

    // TODO: 週間フォームも表示できるようになったら、コメントアウト外す
    / .ui.large.buttons id='meal-time-buttons'
      .day
        button type='button' class='meal-time-button ui button basic secondary' id='check-day'
          | 日
      .or
      .week
        button type='button' class='meal-time-button ui button basic' id='check-week'
          | 週
      .or
      .month
        button type='button' class='meal-time-button ui button basic' id='check-month'
          | 月

  // TODO: 一旦コレで
  .ui.center.aligned.form
    = form_with scope: :date, url: meal_records_path, method: :get, local: true, class: 'field' do |f|
      .ui.grid.computer.only.tablet.only.sixteen.wide.two.column
        .twelve.wide.column
          = f.date_field :meal_time, value: @search_params, placeholder: '年/月/日', class: 'ui basic button'
        .four.wide.column
          = f.submit t('defaults.search'), class: 'ui basic large button'
      .ui.center.grid.mobile.only
        .sixteen.wide.column
          = f.date_field :meal_time, value: @search_params, placeholder: '年/月/日', class: 'ui basic button mb-2'
          = f.submit t('defaults.search'), class: 'ui basic large button'

  / .ui.center.aligned.basic.segment
      #day
        / .container
        .ui.grid
          .tablet.only.mobile.only.sixteen.wide.column
            = form_with scope: :date, url: meal_records_path, method: :get, local: true do |f|
              .row
                .input-group.date.sixteen.wide.column id="datetimepicker4" data-target-input="nearest"
                  = f.text_field :meal_time, value: @search_params, class: "form-control datetimepicker-input", data: { target: "#datetimepicker4" }, placeholder: '年/月/日'
                    / input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker4"
                  .input-group-append data-target="#datetimepicker4" data-toggle="datetimepicker"
                    .input-group-text
                      i class="calendar alternate icon"
                / = f.submit t('defaults.search'), class: 'ui basic button'

          / .computer.only.sixteen.wide.column
            = form_with scope: :date, url: meal_records_path, method: :get, local: true do |f|
              .row
                .input-group.date.computer-calendar id="datetimepicker4" data-target-input="nearest"
                  = f.text_field :meal_time, value: @search_params, class: "form-control datetimepicker-input", data: { target: "#datetimepicker4" }, placeholder: '年/月/日'
                    / input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker4"
                  .input-group-append data-target="#datetimepicker4" data-toggle="datetimepicker"
                    .input-group-text
                      i class="calendar alternate icon"
                = f.submit t('defaults.search'), class: 'ui basic button'

      / #week style="display: none"
        .container
        = form_with scope: :week, url: meal_records_path, method: :get, local: true do |f|
          .row
            .col-sm-6
              .form-group
                .input-group.date id="datetimepicker4" data-target-input="nearest"
                  = f.week_field :meal_time, value: @search_params, class: "form-control datetimepicker-input", data: { target: "#datetimepicker4" }, placeholder: '年/月/日'
                    / input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker4"
                  .input-group-append data-target="#datetimepicker4" data-toggle="datetimepicker"
                    .input-group-text
                      i class="calendar alternate icon"
          .form-group
            = f.submit t('defaults.search'), class: 'ui basic button'
      / #month style="display: none"
        .container
        = form_with scope: :month, url: meal_records_path, method: :get, local: true do |f|
          .row
            .col-sm-6
              .form-group
                .input-group.date id="datetimepicker11" data-target-input="nearest"
                  = f.text_field :meal_time, value: @search_params, class: "form-control datetimepicker-input", data: { target: "#datetimepicker11" }, placeholder: '年/月'
                    / input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker11"
                  .input-group-append data-target="#datetimepicker11" data-toggle="datetimepicker"
                    .input-group-text
                      i class="calendar alternate icon"
          .form-group
            = f.submit t('defaults.search'), class: 'ui basic button'


